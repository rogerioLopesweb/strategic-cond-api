{
  "compilerOptions": {
    /* ConfiguraÃ§Ãµes de Projeto */
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node" /* ðŸŽ¯ Garante que o Node encontre os mÃ³dulos corretamente */,
    "lib": ["ESNext"],
    "rootDir": "./src",
    "outDir": "./dist",

    /* Suporte a tipos customizados (ESSENCIAL para o Express Request) */
    "typeRoots": ["./node_modules/@types", "./src/shared/@types"],

    /* Suporte a Decoradores */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /* Rigor de Tipagem */
    "strict": true,
    "noImplicitAny": true,
    /* Ãštil para Entidades: permite propriedades nÃ£o iniciadas no campo, mas sim no constructor */
    "strictPropertyInitialization": false,

    /* Interoperabilidade e Performance */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,

    /* Atalhos de Caminho (Path Mapping) */
    "baseUrl": ".",
    "paths": {
      "@modules/*": ["src/modules/*"],
      "@shared/*": ["src/shared/*"],
      "@config/*": ["src/config/*"]
    }
  },
  "include": ["src/**/*", "src/shared/@types/express.d.ts"],
  "exclude": ["node_modules", "dist"]
}
